generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String  @id @default(cuid())
  name  String
  email String  @unique
  tasks Task[]
}

model Task {
  id          String @id @default(cuid())
  title       String
  description String?
  isCompleted Boolean @default(false)
  userId      String
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}
